<!-- templates/root.jinja2 -->
{% extends "templates/layout.jinja2" %}
{% block content %}

<h2>Create</h2>

<script src="/Scripts/jquery.validate.min.js"></script>
<script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>

<form action="/beers/save/create" method="POST">
    <fieldset>
        <legend>Beer</legend>

        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            <input type="text" name="name" />
        </div>

        <div class="editor-label">
            ABV
        </div>
        <div class="editor-field">
            <input type="text" name="abv" />
        </div>

        <div class="editor-label">
            IBU
        </div>
        <div class="editor-field">
            <input type="text" name="ibu" />
        </div>

        <div class="editor-label">
            SRM
        </div>
        <div class="editor-field">
            <input type="text" name="srm" />
        </div>

        <div class="editor-label">
            UPC
        </div>
        <div class="editor-field">
            <input type="text" name="upc" />
        </div>

        <div class="editor-label">
            Brewery ID
        </div>
        <div class="editor-field">
            <input type="text" name="brewery_id" />
        </div>

        <div class="editor-label">
            Description
        </div>
        <div class="editor-field">
            <input type="text" name="description" />
        </div>
        
        <div class="editor-label">
            Style
        </div>
        <div class="editor-field">
            <input type="text" name="style" />
        </div>
        
        <div class="editor-label">
            Category
        </div>
        <div class="editor-field">
            <input type="text" name="category" />
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
</form>

<div>
    <a href="/breweries/index">Back to List</a>
</div>

{% endblock %}