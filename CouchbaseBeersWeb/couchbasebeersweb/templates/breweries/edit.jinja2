<!-- templates/root.jinja2 -->
{% extends "templates/layout.jinja2" %}
{% block content %}

<h2>Edit</h2>

<script src="/Scripts/jquery.validate.min.js"></script>
<script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
<form action="/breweries/save/edit" method="POST">
    <fieldset>
        <legend>Brewery</legend>

        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            <input type="text" name="name" value="{{model.name}}" />
        </div>

        <div class="editor-label">
            City
        </div>
        <div class="editor-field">
            <input type="text" name="city" value="{{model.city}}" />
        </div>

        <div class="editor-label">
            State
        </div>
        <div class="editor-field">
            <input type="text" name="state" value="{{model.state}}"/>
        </div>

        <div class="editor-label">
            Code
        </div>
        <div class="editor-field">
            <input type="text" name="code" value="{{model.code}}"/>
        </div>

        <div class="editor-label">
            Country
        </div>
        <div class="editor-field">
            <input type="text" name="country" value="{{model.country}}"/>
        </div>

        <div class="editor-label">
            Phone
        </div>
        <div class="editor-field">
            <input type="text" name="phone" value="{{model.phone}}"/>
        </div>

        <div class="editor-label">
            Website
        </div>
        <div class="editor-field">
            <input type="text" name="website" value="{{model.website}}"/>
        </div>
       
        <div class="editor-label">
            Description
        </div>
        <div class="editor-field">
            <input type="text" name="description" value="{{model.description}}"/>
        </div>

        <p>
            <input type="hidden" value="{{model.id}}" name="id"/>
            <input type="submit" value="Save"/>
        </p>
    </fieldset>
</form>

<div>
    <a href="/breweries/index">Back to List</a>
</div>

{% endblock %}